<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.drag_with_finger_view.widget.DragWithFingerButton
        android:id="@+id/drag_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="改变margin进行移动的Button"
        android:gravity="center"
        android:background="#33ff0000"/>

    <com.example.drag_with_finger_view.widget.IncorrectDragWithFingerButton
        android:id="@+id/incorrect_drag_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="调用scrollTo()进行移动的Button"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="#330000ff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button"
        android:layout_centerInParent="true"/>
</RelativeLayout>